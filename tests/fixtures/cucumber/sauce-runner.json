{
  "Kind": "playwright-cucumberjs",
  "sauce": {
    "region": "us-west-1",
    "metadata": {
      "tags": ["tag1", "tag2"],
      "build": "Local Test Build"
    }
  },
  "playwright": {
    "version": "1.25.1"
  },
  "rootDir": "./",
  "suites": [
    {
      "name": "cucumber local test",
      "browserName": "chromium",
      "browserVersion": "101",
      "options": {
         "paths": ["features/**/*.feature"],
         "require": ["features/support/*.js"]
      }
    }
  ],
  "npm": {
    "packages": {
      "@cucumber/cucumber": "8.6.0"
    }
  }
}