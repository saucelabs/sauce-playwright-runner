{
  "Kind": "cucumber",
  "sauce": {
    "region": "us-west-1",
    "metadata": {
      "tags": ["tag1", "tag2"],
      "build": "Local Test Build"
    }
  },
  "cucumber": {
    "version": "8.5.0"
  },
  "suites": [
    {
      "name": "cucumber local test",
      "env": {
        "BROWSER_NAME": "chromium"
      },
      "browserVersion": "101",
      "options": {
         "paths": ["features/**/*.feature"],
         "require": ["features/support/*.js"]
      }
    }
  ]
}