{
    "hooks": {
        "after:bump": ["bash ./scripts/update-playwright-browsers.sh"]
    },
    "git": {
        "commit": true,
        "tag": true,
        "tagName": "v${version}"
    },
    "npm": {
        "publish": false,
        "ignoreVersion": true
    },
    "github": {
        "release": true,
        "draft": true,
        "releaseName": "v${version}",
        "releaseNotes": "./.github/helpers/generate-release-notes.sh ${latestVersion} ${version}"
    }
}
