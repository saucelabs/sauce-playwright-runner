{
  "name": "sauce-playwright-runner",
  "version": "0.0.0",
  "description": "Sauce Labs Playwright Test Runner",
  "license": "MIT",
  "private": true,
  "main": "src/playwright-recorder.js",
  "scripts": {
    "lint": "eslint tests/ src/",
    "test": "./bin/wait_display && DISPLAY=\"$(cat DISPLAY)\" ./bin/playwright",
    "unit-test": "jest --env node",
    "release": "release-it --github.release",
    "release:ci": "npm run release -- --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor",
    "release:major": "npm run release -- major"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/saucelabs/sauce-playwright-runner.git"
  },
  "bugs": {
    "url": "https://github.com/saucelabs/sauce-playwright-runner/issues"
  },
  "homepage": "https://github.com/saucelabs/sauce-playwright-runner",
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@playwright/test": "1.31.1",
    "@saucelabs/playwright-reporter": "0.4.1",
    "@saucelabs/testcomposer": "^1.0.0",
    "@wdio/logger": "8.6.6",
    "dotenv": "16.0.3",
    "glob": "^8.0.0",
    "lodash": "4.17.21",
    "playwright": "1.31.1",
    "query-string": "^7.1.1",
    "sauce-testrunner-utils": "^1.0.0",
    "shelljs": "^0.8.5",
    "xml-js": "1.6.11",
    "yargs": "17.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@tsconfig/node18": "1.0.1",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.15.7",
    "@types/shelljs": "0.8.12",
    "@types/yargs": "17.0.24",
    "@typescript-eslint/eslint-plugin": "5.58.0",
    "@typescript-eslint/parser": "5.58.0",
    "babel-jest": "^29.1.2",
    "bluebird": "^3.7.2",
    "eslint": "8.38.0",
    "eslint-config-appium": "^4.7.0",
    "eslint-plugin-jest": "^27.1.1",
    "husky": "^4.3.0",
    "jest": "^29.1.2",
    "jest-circus": "^29.1.2",
    "jest-cli": "^29.1.2",
    "release-it": "^15.5.0",
    "typescript": "5.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run unit-test"
    }
  }
}
