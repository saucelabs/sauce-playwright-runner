{
  "name": "sauce-playwright-runner",
  "version": "0.0.0",
  "description": "Sauce Labs Playwright Test Runner",
  "license": "MIT",
  "private": true,
  "main": "src/playwright-recorder.js",
  "scripts": {
    "build": "docker build -t saucelabs/${npm_package_name}:latest --cache-from saucelabs/${npm_package_name}:latest .",
    "docker:push": "docker push saucelabs/${npm_package_name}:latest",
    "start": "docker run --env SAUCE_USERNAME --env SAUCE_ACCESS_KEY -d saucelabs/${npm_package_name}:latest",
    "test": "./bin/wait_display && DISPLAY=\"$(cat DISPLAY)\" ./bin/playwright",
    "test-integration": "bash tests/integration/integration-tests.sh",
    "lint": "eslint tests/ src/",
    "unit-test": "jest --env node",
    "release": "release-it --github.release",
    "release:ci": "npm run release -- --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor",
    "release:major": "npm run release -- major"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/saucelabs/sauce-playwright-runner.git"
  },
  "bugs": {
    "url": "https://github.com/saucelabs/sauce-playwright-runner/issues"
  },
  "homepage": "https://github.com/saucelabs/sauce-playwright-runner",
  "dependencies": {
    "@babel/core": "^7.14.6",
    "@playwright/test": "1.14.1",
    "@wdio/logger": "^5.16.10",
    "glob": "^7.1.6",
    "lodash": "^4.17.21",
    "sauce-testrunner-utils": "0.4.5",
    "saucelabs": "4.7.5",
    "shelljs": "^0.8.3",
    "xml-js": "1.6.11",
    "yargs": "^16.1.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.10.1",
    "axios": "^0.21.1",
    "bluebird": "^3.7.2",
    "eslint": "^7.9.0",
    "eslint-config-appium": "^4.5.0",
    "eslint-plugin-jest": "^24.0.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "jest-cli": "^26.4.2",
    "mocha": "^8.1.3",
    "release-it": "^14.4.1",
    "saucectl": "0.65.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run unit-test"
    }
  }
}
